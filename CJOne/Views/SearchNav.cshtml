﻿@using Orchard.Search.ViewModels;
@{
    var searchText = new SearchViewModel();
    if (Model.ViewModel != null) {
        searchText = (SearchViewModel)Model.ViewModel;
    }
}
@using (Html.BeginForm("index", "search", new { area = "Orchard.Search" }, FormMethod.Get, new { @class = "navbar-search pull-right" })) {
    @Html.TextBox("q", searchText.Query, new { @class = "search-query", placeholder = "Search" })
}