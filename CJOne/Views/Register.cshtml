<div class="row-fluid">
    <div class="span12">
        <div class="page-header">
            <h1>Register with @WorkContext.CurrentSite.SiteName</h1>
        </div>
    </div>
</div>

<div class="well logreg">
    @using (Html.BeginFormAntiForgeryPost(Url.Action("Register"), FormMethod.Post, new { @class = "form-horizontal" })) {
        <!-- Username -->
        <div class="control-group">
            <label class="control-label" for="username">@T("Username")</label>
            <div class="controls">
                @Html.TextBox("username", string.Empty, new { @class = "input-large" })
                @Html.ValidationMessage("username")
            </div>
        </div>
        <!-- Email -->
        <div class="control-group">
            <label class="control-label" for="email">@T("Email")</label>
            <div class="controls">
                @Html.TextBox("email", string.Empty, new { @class = "input-large" })
                @Html.ValidationMessage("email")
            </div>
        </div>
        <!-- Password -->
        <div class="control-group">
            <label class="control-label" for="password">@T("Password")</label>
            <div class="controls">
                @Html.Password("password", string.Empty, new { @class = "input-large" })
                @Html.ValidationMessage("password")
            </div>
        </div>
        <!-- Password Confirm -->
        <div class="control-group">
            <label class="control-label" for="confirmpassword">@T("Confirm new Password")</label>
            <div class="controls">
                @Html.Password("confirmpassword", string.Empty, new { @class = "input-large" })
                @Html.ValidationMessage("confirmPassword")
            </div>
        </div>
        <!-- Buttons -->
        <div class="form-actions">
            <!-- Buttons -->
            <button type="submit" class="btn btn-success">@T("Register")</button>
            <button type="reset" class="btn">@T("Reset")</button>
        </div>
    }
    <hr />
    <div class="lregister">
        Already have account with us? @Html.ActionLink(T("Login").ToString(), "LogOn", new { Controller = "Account", Area = "Orchard.Users", ReturnUrl = (Request.QueryString["ReturnUrl"] ?? Request.RawUrl) }, new { rel = "nofollow" })
    </div>
</div>